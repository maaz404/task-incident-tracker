# Production Environment Variables for Docker Compose
# This file contains the required environment variables for the application
# Copy this to .env in your project root and fill in the secure values

# Database Settings
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=CHANGE_ME_SECURE_ROOT_PASSWORD
MONGO_DB_NAME=task_incident_tracker
MONGO_PORT=27017

# Application Database User
MONGO_APP_USERNAME=taskapp
MONGO_APP_PASSWORD=CHANGE_ME_SECURE_APP_PASSWORD

# Application Settings
NODE_ENV=production
JWT_SECRET=CHANGE_ME_VERY_LONG_SECURE_JWT_SECRET_AT_LEAST_64_CHARACTERS
BCRYPT_SALT_ROUNDS=12

# CORS Configuration (add your domain)
CORS_ORIGINS=http://localhost,http://localhost:80,http://localhost:3000,http://your-domain.com

# Client Configuration
REACT_APP_API_URL=http://your-domain.com/api
