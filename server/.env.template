# Node.js Backend Environment Variables Template
# Copy this file to .env and fill in your actual values

# Application Settings
NODE_ENV=development
PORT=5000

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/task_incident_tracker
# For Docker: mongodb://username:password@mongo:27017/database_name?authSource=database_name

# Database Credentials (used by Docker Compose)
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=
MONGO_DB_NAME=task_incident_tracker
MONGO_PORT=27017

# Application Database User (used in mongo-init.js)
MONGO_APP_USERNAME=taskapp
MONGO_APP_PASSWORD=

# Security Settings
JWT_SECRET=
BCRYPT_SALT_ROUNDS=12

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Application Settings
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100
